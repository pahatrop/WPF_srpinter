<Window x:Class="WPF_sprinter.forms.CreateDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit department" Height="262" Width="565" MinHeight="262" MinWidth="565">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="281*"/>
            <ColumnDefinition Width="276*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Edit department" Margin="10" Grid.RowSpan="2" Grid.ColumnSpan="2">
        </GroupBox>
        <TextBlock Height="35" Margin="20,84" Grid.Column="0" Grid.Row="1" Text="Department name:"/>

        <TextBox Height="35" Margin="20,84" Grid.Column="1" Grid.Row="1" Text="{Binding departmentName, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20" DockPanel.Dock="Bottom" Foreground="#f00" Padding="10,5,10,5" Text="{Binding Saved}"></TextBlock>
        <Button Margin="0,0,20,20" Width="100" Height="35" Command="{Binding Path=actionCreateDepartment, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1" Grid.Row="1">Save</Button>
    </Grid>
</Window>
